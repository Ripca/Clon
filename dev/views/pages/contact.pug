extends ../templates/template
block menu 
    -pageActive='contact'
    include ../includes/main-menu
block title 
    h1.title Contact
block main  
    .contact
        .contact__form 
            form.form-contact
                .form-contact__fields
                    input(type="text" name="name" placeholder="NAME").form-contact__input
                    input(type="email" name="email" placeholder="EMAIL").form-contact__input
                    input(type="text" name="subject" placeholder="Subject").form-contact__input
                .form-contact__field 
                    textarea(name="message" placeholder="messssage").form-contact__textarea 
            .form-contact__field 
                    input(type="submit" value="Send").form__submit
        .contact__map 
            iframe(src='https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d61797.61767146299!2d-90.5351894!3d14.5218984!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2sgt!4v1700071923707!5m2!1ses!2sgt' allowfullscreen='' loading='lazy' referrerpolicy='no-referrer-when-downgrade')
